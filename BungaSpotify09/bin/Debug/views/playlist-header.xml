 <?
-- Resource file for playlist app.
?><document>
	<section id="overview" title="Overview">
		<box height="120" width="100%">
			<vbox>
				<text>${playlist.name}</text>
				<text>${playlist.description}</text>
			</vbox>
		</box>
		%-- playlist grid, resizes dynamically
		<grid cols="title,artist,duration,album" 
			uri="${playlist.uri}"
			reorder="${playlist.canReorder}" 
			delete="${playlist.canDelete}" 
			add="${playlist.canAdd}" />
	</section>
</document>