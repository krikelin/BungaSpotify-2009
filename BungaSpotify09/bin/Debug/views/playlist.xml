<?
#include('views/generic-header.xml'); 
-- Resource file for playlist app.

?><document xmlns="http://segurify.net/TR/2011">
	<section id="overview" title="Playlist">
		<box bgcolor="#222222" padding="12,12,12,12" height="120" width="100%">
			
				<text width="100%" height="20" fgcolor="#FFFFFF">${data.Playlist.Name}</text>
				<text fgcolor="#888888">${data.Playlist.Description}</text>
		
		</box>
		<!-- playlist grid, resizes dynamically -->
		<playlist
			allowsReorder="true"
			uri="${data.Playlist.Uri}">
			<columnheader columnheaders="title,artist,duration,album" />
			% for track in enum(data.Playlist.Tracks) do
				<track 
				uri="${track.Uri}" />
			% end
		</playlist>
	</section>
</document>