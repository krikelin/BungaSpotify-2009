<document xmlns="http://segurify.net/TR/2011">
	<section padding="12,12,12,12" title="What's new" id="overview">
			
			<vbox height="320" width="100%">
				<track uri="spotify:track:1Hm1e7VMs1CmqzhjOLEci1" 
					title="In and Out of Love" 
					artist_uri="spotify:artist:0SfsnGyD8FpIN4U4WCkBZ5"
					artist="Armin Van Buuren"
					album="In and out of Love"
					album_uri="spotify:artist:0SfsnGyD8FpIN4U4WCkBZ5" />
				<text size="12" fgcolor="#88ff88">What's new</text>
				% if news then
				% for item in news do
				<hbox width="100%" height="64px">
					<img width="64" height="64" uri="${item.uri}" src="${item.picture}" />
					<vbox flex="1">
						<link uri="${item.uri}" text="${item.title}" />
						<text>${item.description}</text>
					</vbox>
				</hbox>
				% end	
				% else
				<text>No news found</text>
				% end
			</vbox>
			<text padding="12,12,12,12" style="font-size: 15" fgcolor="#ffaaff">Artists you might like</text>
			<hbox bgcolor="#AAAAAA">
				% if suggested_artist then
				% for artist in suggested_artist do
				<vbox>
					<link uri="${artist.uri}">${artist.name}</link>
				</vbox>
				% end
				% else
				<text fgcolor="#ffffff">No relatead artists found</text>
				% end
			</hbox>
			
	</section>
	<section id="toplist" title="Top List">
	</section>
</document>
			